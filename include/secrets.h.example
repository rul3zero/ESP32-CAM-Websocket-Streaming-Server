#ifndef SECRETS_H
#define SECRETS_H

/*
 * Configuration Template for ESP32-CAM SmartHaus Project
 * 
 * IMPORTANT: 
 * 1. Copy this file to 'secrets.h' in the same directory
 * 2. Replace all placeholder values with your actual credentials
 * 3. Never commit the actual 'secrets.h' file to version control
 */

// ================================
// WiFi Network Configuration
// ================================
#define WIFI_SSID "your_wifi_network_name"        // Your WiFi network name (SSID)
#define WIFI_PASSWORD "your_wifi_password"        // Your WiFi password

// ================================
// Firebase Project Configuration
// ================================
// Get these values from your Firebase Project Settings
#define API_KEY "your_firebase_web_api_key"                           // Firebase Web API Key
#define USER_EMAIL "your_firebase_user_email@example.com"             // Firebase Auth user email
#define USER_PASSWORD "your_firebase_user_password"                   // Firebase Auth user password
#define DATABASE_URL "https://your-project-id-default-rtdb.firebaseio.com/"  // Realtime Database URL

// ================================
// Hardware Configuration
// ================================
#define WEBSOCKET_PORT 81                         // WebSocket server port (default: 81)

// ================================
// Optional: Device Identification
// ================================
#define DEVICE_ID "esp32cam_001"                  // Unique device identifier for Firebase
#define DEVICE_NAME "ESP32-CAM Living Room"       // Human-readable device name

/*
 * Setup Instructions:
 * 
 * 1. WiFi Setup:
 *    - Replace WIFI_SSID with your network name
 *    - Replace WIFI_PASSWORD with your network password
 * 
 * 2. Firebase Setup:
 *    - Go to Firebase Console (https://console.firebase.google.com/)
 *    - Create a new project or select existing one
 *    - Go to Project Settings > General tab
 *    - Copy the "Web API Key" to API_KEY
 *    - Copy the Realtime Database URL to DATABASE_URL
 *    - Enable Authentication > Email/Password provider
 *    - Create a user account and use those credentials for USER_EMAIL and USER_PASSWORD
 * 
 * 3. Database Rules (for development/testing):
 *    In Firebase Console > Realtime Database > Rules, set:
 *    {
 *      "rules": {
 *        ".read": true,
 *        ".write": true
 *      }
 *    }
 *    
 *    For production, implement proper security rules!
 */

#endif // SECRETS_H
